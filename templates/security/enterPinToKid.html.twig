{% extends 'base.html.twig' %}

{% block title %}{% trans %}Enter PIN{% endtrans %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}

{% endblock %}
{% block javascripts  %}
    {{ parent() }}
{% endblock %}

{% block body %}<br>
    {% if profile %}
        <form>
            <div class="container col-3"><br>
                <h1 >{% trans %}You shouldn't enter a pin{% endtrans %}</h1>
                <input type="hidden" name="pin" id="pin" class="form-control col-3" placeholder="PIN" autofocus="autofocus"><br>
                <button class="btn btn-success " type="submit">
                    {% trans %}Check access{% endtrans %}
                </button>
                <br>
                <br>
            </div>
        </form>
    {% endif %}
    <div class="container d-flex col-3">
        <button class="btn registration " onclick="window.location.href='/'">
            {% trans %}Back to profile selection {% endtrans %}
        </button>
    </div>

{% endblock %}
