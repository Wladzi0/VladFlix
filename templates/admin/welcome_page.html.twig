{% extends 'base.html.twig' %}
{% block title %}{% trans %}Welcome Admin {% endtrans %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block body %}

    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert-{{ type }}" role="alert">
                {{ message|trans }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class=" ">
        <a style="text-decoration: none" class=" ml-4 btn pl-4 mt-4 bg-light col-2 mr-3"
           href="{{ path('select_profile') }}">
            Back to selection of profile
        </a>
        <a style="text-decoration: none" class=" btn pl-4 mt-4 bg-light col-2 mr-3"
           href="{{ path('add_new_film') }}">
            Add new film
        </a>
        <a style="text-decoration: none" class=" btn pl-4 mt-4 bg-light col-2 mr-3"
           href="{{ path('add_new_serial') }}">
            Add new serial
        </a>
        <a style="text-decoration: none" class=" btn pl-4 mt-4 bg-light col-2 mr-3"
           href="{{ path('list_of_all_films') }}">
            Films
        </a>
        <a style="text-decoration: none" class=" btn pl-4 mt-4 bg-light col-2"
           href="{{ path('list_of_all_serials') }}">
            Serials
        </a>
    </div>
{% endblock %}